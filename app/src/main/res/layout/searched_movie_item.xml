<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/movie_icon"
        android:gravity="center"
        android:src="@drawable/ic_baseline_local_movies_24" />

    <TextView
        android:id="@+id/movie_name_search_item_rv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        tools:text="The Godfather" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

        <TextView
            android:id="@+id/director_search_item_rv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            tools:text="Mario Puzo" />

        <TextView
            android:id="@+id/release_date_search_item_rv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            tools:text="1972" />

        <TextView
            android:id="@+id/country_search_item_rv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            tools:text="USA" />

        <TextView
            android:id="@+id/rating_search_item_rv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            app:drawableLeftCompat="@drawable/ic_baseline_star_24"
            tools:text="8.6" />

    </LinearLayout>

</LinearLayout>